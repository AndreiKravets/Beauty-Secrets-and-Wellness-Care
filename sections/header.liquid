{{ 'header.css' | asset_url | stylesheet_tag }}
<script src="{{ 'header.js' | asset_url }}" defer></script>

<style>
    #shopify-section-{{ section.id }} .s-header{
        background-color: {{ section.settings.bg_color }};
    }
    #shopify-section-{{ section.id }} header{
        max-width: {{ section.settings.max_width }}px;
        min-height: {{ section.settings.height }}px;;
    }
</style>

<s-header class="s-header {% if localization.language.iso_code == 'ar' %}s-header--rtl{% endif %}" data-sticky = "{{ section.settings.sticky_header }}">
  <header>
      <span class="s-header__menu-btn">
        {% render 'icon-hamburger' %}
        {% render 'icon-close' %}
    </span>
    {% if section.settings.logo %}
      <div class="s-header__logo">
        <a href="/">
          {% render 'image', image: section.settings.logo %}
        </a>
      </div>
    {% endif %}
    <nav class="s-header__menu">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="s-header__menu-item">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>
    <div class="s-header__account">
      {% render 'icon-cart.liquid' %}
      {% render 'icon-account.liquid' %}
    </div>
  </header>
</s-header>


{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Sticky Header",
      "default": true
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 1200,
      "max": 1600,
      "step": 5,
      "label": "Header Max Width",
      "default": 1300
    },
    {
      "type": "range",
      "id": "height",
      "min": 60,
      "max": 120,
      "step": 1,
      "label": "Header Height",
      "default": 80
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f0f8ff"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}